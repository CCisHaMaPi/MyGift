<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:descendantFocusability= "blocksDescendants">

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/def_loading"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/text_gname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/image_head"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:id="@+id/iv_biao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_head"
        android:layout_centerVertical="true"
        android:src="@mipmap/g_biao"
        android:paddingRight="5dp"
        />
    <TextView
        android:id="@+id/text_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightgreen"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/iv_biao"
        android:layout_centerVertical="true"
        android:text="@string/loading"
        />
    <TextView
        android:id="@+id/text_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="20sp"
        android:layout_toRightOf="@id/text_starttime"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/btn_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/lightgreen"
        android:text="@string/btn_see"
        android:textColor="@color/white"
        android:focusable = "false" />
    <TextView
        android:id="@+id/text_operators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image_head"
        android:layout_toLeftOf="@id/btn_see"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:maxLines="1"
        />
</RelativeLayout>